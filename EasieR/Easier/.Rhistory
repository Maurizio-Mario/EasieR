z_plot <- function(x, myMean, mySd, p = 0, title = "", y){
dt1 <- seq(-4, 4, length = 1000)
dt2 <- dnorm(dt1, 0, 1)
z <- (x - myMean)/mySd
if(p == 3){
z2 <- (y - myMean)/mySd
p <- pnorm(x, myMean, mySd)
}
xyplot(dt2 ~ dt1,
type = "l",
main = title,
panel = function(x, y, ...){
panel.xyplot(x, y, ...)
if(p == 1){
xx <- c(-4, x[x>=-4 & x<=z], z)
yy <- c(0, y[x>=-4 & x<=z], 0)
panel.polygon(xx,yy, ..., col='red')
panel.text(lab = p, x = 3.5, y = 0.2)
}else if(p == 2){
xx <- c(z, x[x>=z & x<=4], 4)
yy <- c(0, y[x>=z & x<=4], 0)
panel.polygon(xx,yy, ..., col='red')
}else if(p == 3){
panel.abline(v = z2, lty = 2)
if(z < z2){
xx <- c(z, x[x>=z & x<=z2], z2)
yy <- c(0, y[x>=z & x<=z2], 0)
panel.polygon(xx,yy, ..., col='red')
}else{
xx <- c(z2, x[x>=z2 & x<=z], z)
yy <- c(0, y[x>=z2 & x<=z], 0)
panel.polygon(xx,yy, ..., col='red')
}
}
panel.abline(v = c(z, 0), lty = c(2, 3))
panel.text(lab = c(paste("z = ", z, sep = ""), "Mean"), y = c(.41, .4), x = c(z, 0)+.2, cex = 1)
}
)
}
z_plot(163, 180, 10, 1)
library(lattice)
